<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordStressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How relaxed are you right now?" />

        <RadioGroup
            android:id="@+id/stressRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/stressButton1"
                android:layout_width="62dp"
                android:layout_height="75dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/stressButton2"
                android:layout_width="62dp"
                android:layout_height="75dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/stressButton3"
                android:layout_width="62dp"
                android:layout_height="75dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/stressButton4"
                android:layout_width="62dp"
                android:layout_height="75dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/stressButton5"
                android:layout_width="62dp"
                android:layout_height="75dp"
                android:layout_weight="1" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView47"
            android:layout_width="match_parent"
            android:layout_height="448dp"
            android:text="Stressed                                                          Relaxed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="backToMoodRecordingButton"
                android:text="Back" />

            <Button
                android:id="@+id/button8"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:onClick="recordCompanionsButton"
                android:text="@string/next" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>