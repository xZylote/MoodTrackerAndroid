<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordMoodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/how_do_you_feel_now" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/moodRadio1"
                android:layout_width="48dp"
                android:layout_height="81dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/moodRadio2"
                android:layout_width="48dp"
                android:layout_height="81dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/moodRadio3"
                android:layout_width="48dp"
                android:layout_height="81dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/moodRadio4"
                android:layout_width="48dp"
                android:layout_height="81dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/moodRadio5"
                android:layout_width="48dp"
                android:layout_height="81dp"
                android:layout_weight="1" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView37"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:text="Very bad                                                      Very good" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button17"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:onClick="backToLoggedInPageButton"
                android:text="Back" />

            <Button
                android:id="@+id/button12"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:onClick="recordStressButton"
                android:text="@string/next" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>